<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fin.controllers.RegistrationController"
            prefHeight="200.0" prefWidth="300.0" fx:id="root">
    <GridPane hgap="10" vgap="10" layoutX="20" layoutY="60">
        <Label fx:id="usernameLabel" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="passwordLabel" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="username" promptText="login" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <TextField fx:id="password" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <GridPane hgap="35" vgap="10" layoutX="20" layoutY="160">
        <Button fx:id="login" text="Sign In" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button fx:id="registration" text="Sign Up" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button fx:id="exit" text="Exit" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button fx:id="local" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
    </GridPane>
</AnchorPane>
